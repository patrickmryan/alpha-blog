<h1>All Articles</h1>
<p>
<%= link_to "Create new article", new_article_path %>
</p>

<table>
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Description</th>
  </tr>

<% @articles.each do |art| %>
  <tr>
    <td><%= art.id %></td>
    <td><%= art.title %></td>
    <td><%= art.description %></td>

    <td><%= link_to 'Edit', edit_article_path(art) %></td>
    <td><%= link_to 'Show', article_path(art) %></td>

  </tr>
<% end %>

</table>
